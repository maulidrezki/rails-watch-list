<div class="banner-list" style="background-image: url(https://image.freepik.com/free-vector/now-showing-realistic-retro-theatre-sign_52683-23704.jpg)">
</div>


<div class="movie-cards">
  <div class="list-text">
    <h3>My Movies</h3>
    <%= link_to 'Add a movie', new_movie_path(@movie), class: "btn btn-success"  %>
  </div>

  <div class="movie-card">
        <% @movies.each do |movie| %>
          <div class="list-group-item">
          <%= image_tag movie.poster_url, class:"poster-img" %>
            <div class="movie-card-text">
              <h4><strong><%= movie.title %> â€¢ <%= movie.rating %><i class="fas fa-star star-yellow"></i></strong></h4>
              <p class="overflow-ellipsis"><%= movie.overview %></p>
              <div class="show-delete">
                <%= link_to "See more", movie_path(movie) %>
                <%= link_to "Delete",
                              movie_path(movie),
                              method: :delete,
                              data: { confirm: "Are you sure?" } %>
              </div>
            </div>
          </div>
        <% end %>
  </div>
</div>
